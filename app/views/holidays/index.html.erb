<p id="notice"><%= notice %></p>

<h1>Listing Holidays</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Manager</th>
      <th>Startdate</th>
      <th>Enddate</th>
      <th>Duration</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @holidays.each do |holiday| %>
      <tr>
        <td><%= holiday.username %></td>
        <td><%= holiday.startdate %></td>
        <td><%= holiday.enddate %></td>
        <td><%= holiday.manager %></td>
        <td><%= holiday.duration %></td>
        <td><%= link_to 'Show', holiday %></td>
        <td><%= link_to 'Edit', edit_holiday_path(holiday) %></td>
        <td><%= link_to 'Destroy', holiday, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h3>Import Holidays</h3>
<% form_tag import_holidays_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%=submit_tag "Upload Holidays" %>
  <%= link_to 'New Holiday', new_holiday_path %>
<%end%>