<p id="notice"><%= notice %></p>


<h1>Listing Userholidays</h1>


<div class="media">
  <div class="media-body">

      <table class="table table-hover">
        <thead>
          <tr>
            <th>Username</th>
            <th>Start</th>
            <th>End</th>
            <th>Managersname</th>
             <th>Duration</th>
             <th>Status</th>
            <th colspan="3"></th>
          </tr>
        </thead>
      
        <tbody>
          <% @userholidays.each do |userholiday| %>
            <tr>
              <td><%= userholiday.username %></td>
              <td><%= userholiday.start.strftime("%m/%d/%Y") %></td>
              <td><%= userholiday.end.strftime("%m/%d/%Y") %></td>
              <td><%= userholiday.managersName %></td>
              <td><%= userholiday.duration %></td>
              <td><%= userholiday.status_type %></td>
              <td><%= link_to 'Show', userholiday, class: 'btn btn-mini' %></td>
              <td><%= link_to 'Edit', edit_userholiday_path(userholiday), class: 'btn btn-mini btn-success' %></td>
              <td><%= link_to 'Destroy', userholiday, method: :delete, class: 'btn btn-mini btn-danger', data: { confirm: 'Are you sure?' } %></td>
            </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>

